<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_banner"
        android:banner="@mipmap/ic_banner"
        android:label="@string/plugin_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/settings"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Wallpaper Provider Service -->
        <service
            android:name=".WallpaperProviderService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="tv.projectivy.plugin.wallpaperprovider.WALLPAPER_PROVIDER" />
            </intent-filter>
            <meta-data
                android:name="tv.projectivy.plugin.wallpaperprovider.name"
                android:value="@string/plugin_short_name" />
            <meta-data
                android:name="tv.projectivy.plugin.wallpaperprovider.uuid"
                android:value="@string/plugin_uuid" />
        </service>

    </application>

</manifest>